@model IEnumerable<Udemy.Models.RegistroDeVenda>

<h2>Busca simples</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="dataMin">Data inicial</label>
                    <input type="date" class="form-control" name="dataMin" value=@ViewData["dataMin"] />
                </div>
                <div class="form-group">
                    <label for="dataMax">Data final</label>
                    <input type="date" class="form-control" name="dataMax" value=@ViewData["dataMax"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Vendas totais = @Model.Sum(reg => reg.Quantia)</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>@Html.DisplayNameFor(model=>model.Id)</th>
                    <th>@Html.DisplayNameFor(model=>model.Data)</th>
                    <th>@Html.DisplayNameFor(model=>model.Atendente)</th>
                    <th>@Html.DisplayNameFor(model=>model.Atendente.Departamento)</th>
                    <th>@Html.DisplayNameFor(model=>model.Quantia)</th>
                    <th>@Html.DisplayNameFor(model=>model.Status)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model) {
                    <tr>
                        <th>@Html.DisplayFor(modelItem=>m.Id)</th>
                        <th>@Html.DisplayFor(modelItem=>m.Data)</th>
                        <th>@Html.DisplayFor(modelItem=>m.Atendente.Nome)</th>
                        <th>@Html.DisplayFor(modelItem=>m.Atendente.Departamento.Nome)</th>
                        <th>@Html.DisplayFor(modelItem=>m.Quantia)</th>
                        <th>@Html.DisplayFor(modelItem=>m.Status)</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>