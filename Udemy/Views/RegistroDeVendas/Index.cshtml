<h2>Registro de venda</h2>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples">
            <fieldset>
                <legend>Busca simples</legend>
                <div class="form-group">
                    <label for="dataMin" class="col-lg-2 control-label">Data inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMin" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataMax" class="col-lg-2 control-label">Data final</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMax" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaEmGrupo">
            <fieldset>
                <legend>Busca em grupo</legend>
                <div class="form-group">
                    <label for="dataMin" class="col-lg-2 control-label">Data inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMin" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataMax" class="col-lg-2 control-label">Data final</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMax" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>